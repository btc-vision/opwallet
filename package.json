    "scripts": {
        "build:content": "vite build --config vite.config.content.ts",
        "clean": "rimraf dist",
        "// Development builds with watch mode": "",
        "dev:chrome": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=chrome MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=chrome MANIFEST=mv3 vite build --watch --mode development",
        "dev:firefox": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=firefox MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=firefox MANIFEST=mv3 vite build --watch --mode development",
        "dev:brave": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=brave MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=brave MANIFEST=mv3 vite build --watch --mode development",
        "dev:edge": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=edge MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=edge MANIFEST=mv3 vite build --watch --mode development",
        "dev:opera": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=opera MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=opera MANIFEST=mv3 vite build --watch --mode development",
        "// Production builds": "",
        "build:chrome": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=chrome MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=chrome MANIFEST=mv3 vite build --mode production && npm run package:chrome",
        "build:firefox": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=firefox MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=firefox MANIFEST=mv3 vite build --mode production && npm run package:firefox",
        "build:brave": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=brave MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=brave MANIFEST=mv3 vite build --mode production && npm run package:brave",
        "build:edge": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=edge MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=edge vite build --mode production && npm run package:edge",
        "build:opera": "cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=opera MANIFEST=mv3 npm run build:content && cross-env NODE_OPTIONS=--max-old-space-size=8192 BROWSER=opera MANIFEST=mv3 vite build --mode production && npm run package:opera",
        "// Packaging commands": "",
        "package:chrome": "tsx scripts/package.ts --browser=chrome",
        "package:firefox": "tsx scripts/package.ts --browser=firefox",
        "package:brave": "tsx scripts/package.ts --browser=brave",
        "package:edge": "tsx scripts/package.ts --browser=edge",
        "package:opera": "tsx scripts/package.ts --browser=opera",
        "// Build all browsers": "",
        "build:all": "npm run build:chrome && npm run build:firefox && npm run build:brave && npm run build:edge && npm run build:opera",
        "// Type checking and linting": "",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "lint": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
        "lint:check": "eslint src --ext .ts,.tsx,.js,.jsx",
        "format": "prettier --write \"src/**/*.{js,jsx,json,md,ts,tsx}\"",
        "// Utilities": "",
        "preview": "vite preview",
        "fix:modules": "node scripts/fix-modules.js",
        "prepare": "npm run fix:modules"
    },
