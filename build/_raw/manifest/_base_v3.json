{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "version": "1.0",
    "default_locale": "en",
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/logo/logo@16x.png",
        "32": "images/logo/logo@32x.png",
        "48": "images/logo/logo@48x.png",
        "128": "images/logo/logo@128x.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/logo/logo@16x.png",
            "32": "images/logo/logo@32x.png",
            "48": "images/logo/logo@48x.png",
            "128": "images/logo/logo@128x.png"
        },
        "default_title": "__MSG_appName__"
    },
    "author": "https://opnet.org",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "homepage_url": "https://opnet.org",
    "permissions": ["storage", "unlimitedStorage", "activeTab"],
    "short_name": "__MSG_appName__",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": [
                "*://*.paypal.com/*",
                "*://*.paypalobjects.com/*",
                "*://*.stripe.com/*",
                "*://*.checkout.com/*",
                "*://*.square.com/*",
                "*://*.squareup.com/*",
                "*://*.braintree.com/*",
                "*://*.braintreegateway.com/*",
                "*://*.authorize.net/*",
                "*://*.2checkout.com/*",
                "*://*.adyen.com/*",
                "*://*.klarna.com/*",
                "*://*.afterpay.com/*",
                "*://*.sezzle.com/*",
                "*://*.affirm.com/*",
                "*://*.venmo.com/*",
                "*://*.zelle.com/*",
                "*://*.cashapp.com/*",
                "*://*.wise.com/*",
                "*://*.transferwise.com/*",
                "*://*.shopify.com/*",
                "*://*.shop.app/*",
                "*://*.amazonpay.com/*",
                "*://*.payments.amazon.com/*",
                "*://*.apple.com/*/shop/*",
                "*://*.googlepay.com/*",
                "*://*.pay.google.com/*",

                "*://*.chase.com/*",
                "*://*.bankofamerica.com/*",
                "*://*.wellsfargo.com/*",
                "*://*.citi.com/*",
                "*://*.citibank.com/*",
                "*://*.capitalone.com/*",
                "*://*.usbank.com/*",
                "*://*.pnc.com/*",
                "*://*.tdbank.com/*",
                "*://*.bbt.com/*",
                "*://*.suntrust.com/*",
                "*://*.regions.com/*",
                "*://*.53.com/*",
                "*://*.ally.com/*",
                "*://*.marcus.com/*",
                "*://*.discover.com/*",
                "*://*.americanexpress.com/*",

                "*://*.coinbase.com/*",
                "*://*.binance.com/*",
                "*://*.kraken.com/*",
                "*://*.gemini.com/*",
                "*://*.crypto.com/*",
                "*://*.kucoin.com/*",
                "*://*.bitfinex.com/*",
                "*://*.bitstamp.net/*",

                "*://*.robinhood.com/*",
                "*://*.etrade.com/*",
                "*://*.tdameritrade.com/*",
                "*://*.schwab.com/*",
                "*://*.fidelity.com/*",
                "*://*.vanguard.com/*",
                "*://*.interactivebrokers.com/*",
                "*://*.webull.com/*",
                "*://*.sofi.com/*",

                "*://*.irs.gov/*",
                "*://*.ssa.gov/*",
                "*://*.medicare.gov/*",
                "*://*.healthcare.gov/*",
                "*://*.dmv.ca.gov/*",
                "*://*.usps.com/*",
                "*://*.login.gov/*",
                "*://*.id.me/*",

                "*://*.okta.com/*",
                "*://*.auth0.com/*",
                "*://*.duo.com/*",
                "*://*.onelogin.com/*",
                "*://*.ping.com/*",

                "*://*.plastiq.com/*",
                "*://*.billpay.com/*",
                "*://*.westernunion.com/*",
                "*://*.moneygram.com/*",
                "*://*.xoom.com/*",
                "*://*.remitly.com/*",
                "*://*.bill.com/*",
                "*://*.divvy.com/*",
                "*://*.expensify.com/*",
                "*://*.concur.com/*"
            ],
            "js": ["content-script.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["pageProvider.js",  "js/*.js", "crypto-polyfill.js"],
            "matches": ["<all_urls>"],
            "type": "module"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}
